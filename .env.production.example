# DJANGO SETTINGS - PRODUCTION CONFIGURATION
# Debug Mode (MUST be False for production)
DEBUG=False

# Allowed Hosts (comma-separated list of domains)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-app.onrender.com

# Database Configuration
# Supabase PostgreSQL connection session pooler URL
DATABASE_URL=postgresql://user:password@host:5432/database

# Django Secret Key (generate a new one for production!)
SECRET_KEY=your-super-secret-key-here

# Email Configuration (production SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Site URL for email templates (production URL)
SITE_URL=https://yourdomain.com

# Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# IMPORTANT PRODUCTION DEPLOYMENT STEPS:
# ============================================
# 1. Set DEBUG=False
# 2. Run: python manage.py collectstatic --noinput
# 3. Ensure WhiteNoise is installed (already in requirements.txt)
# 4. WhiteNoise automatically serves static files in production
# 5. Static files are served from /staticfiles/ directory
# 6. CSS/JS will load correctly with WhiteNoise + collectstatic
