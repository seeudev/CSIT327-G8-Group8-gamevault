    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.transaction-card-modern {
    animation: slideUp 0.4s ease-out;
    animation-fill-mode: backwards;
}

.transaction-card-modern:nth-child(1) { animation-delay: 0.1s; }
.transaction-card-modern:nth-child(2) { animation-delay: 0.2s; }
.transaction-card-modern:nth-child(3) { animation-delay: 0.3s; }
.transaction-card-modern:nth-child(4) { animation-delay: 0.4s; }
.transaction-card-modern:nth-child(5) { animation-delay: 0.5s; }
.transaction-card-modern:nth-child(6) { animation-delay: 0.6s; }

.game-item-card {
    animation: fadeInUp 0.5s ease-out;
    animation-fill-mode: backwards;
}

.game-item-card:nth-child(1) { animation-delay: 0.1s; }
.game-item-card:nth-child(2) { animation-delay: 0.2s; }
.game-item-card:nth-child(3) { animation-delay: 0.3s; }
.game-item-card:nth-child(4) { animation-delay: 0.4s; }

