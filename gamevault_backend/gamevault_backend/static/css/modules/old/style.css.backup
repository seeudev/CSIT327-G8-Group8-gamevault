    background: #f9f9f9;
    padding: 1rem 1.5rem;
    border-radius: 10px;
    margin-bottom: 1.5rem;
}

.filter-form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

/* Layout rows */
.filter-row {
    display: grid;
    grid-template-columns: 1.5fr 1fr 0.8fr 0.8fr 1fr 1fr;
    gap: 0.75rem;
    align-items: center;
}

/* Second row ‚Äì align sort/apply/clear to the right */
.filter-row:nth-of-type(2) {
    grid-template-columns: 1.5fr 1fr 0.8fr 0.8fr 1fr 1fr;
}
.filter-row:nth-of-type(2) input:first-child,
.filter-row:nth-of-type(2) select:first-child {
    grid-column: 2;
}

/* Inputs and selects */
.filter-input,
.filter-select,
.filter-small {
    padding: 0.5rem;
    font-size: 0.95rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    width: 100%;
    box-sizing: border-box;
}

/* Buttons */
.filter-btn {
    padding: 0.55rem 1.2rem;
    background: #333;
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    text-decoration: none;
    font-weight: 500;
    text-align: center;
    transition: background 0.2s ease;
}

.filter-btn:hover {
    background: #222;
}

.clear-btn {
    background: #999;
}

.clear-btn:hover {
    background: #777;
}

/* Responsive tweak for smaller screens */
@media (max-width: 768px) {
    .filter-row {
        grid-template-columns: 1fr 1fr;
    }
}
