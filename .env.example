# Example environment variables for GameVault Backend
# Copy this file to .env and update with your actual values

# Database Configuration (Supabase PostgreSQL)
# Get this from your Supabase project settings
DATABASE_URL=postgresql://user:password@host:port/database

# For local development with SQLite (default if DATABASE_URL not set)
# DATABASE_URL=sqlite:///db.sqlite3

# Django Secret Key (generate a new one for production)
SECRET_KEY=django-insecure-change-this-in-production

# Django Debug Mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma-separated list for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Allowed Origins (React frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
